on fs
    # Keeping following partitions outside fstab file. As user may not have
    # these partition flashed on the device. Failure to mount any partition in fstab file
    # results in failure to launch late-start class.

    mkdir /devlog 0700 root root
    wait /dev/block/bootdevice/by-name/devlog
    e2fsck emmc@devlog
    mount ext4 /dev/block/bootdevice/by-name/devlog /devlog nosuid nodev barrier=1,errors=continue

    mkdir /fataldevlog 0700 root root
    wait /dev/block/bootdevice/by-name/fataldevlog
    e2fsck emmc@fataldevlog
    mount ext4 /dev/block/bootdevice/by-name/fataldevlog /fataldevlog nosuid nodev barrier=1,errors=continue

    # mount carrier partition
    mkdir /carrier 0771 system carrier
    wait /dev/block/bootdevice/by-name/carrier
    mount ext4 /dev/block/bootdevice/by-name/carrier /carrier nosuid nodev noatime barrier=1,grpid

    mount_all fstab.qcom

    # zRAM swap (must use after mount_all)
    swapon_all /etc/fstab.swap

    # Mount radio image and link to /firmware/image
    mkdir /firmware/radio 0771 system system
    wait /dev/block/bootdevice/by-name/radio
    mount vfat /dev/block/bootdevice/by-name/radio /firmware/radio ro shortname=lower,uid=1000,gid=1000,dmask=227,fmask=337

#Don't need
#    exec /system/bin/sh /init.qcom.firmware_links.sh /firmware/radio /firmware/image "modem* mba*"

    # Mount wcnss image and link to /firmware/image
    mkdir /firmware/wcnss 0771 system system
    wait /dev/block/bootdevice/by-name/wcnss
    mount vfat /dev/block/bootdevice/by-name/wcnss /firmware/wcnss ro shortname=lower,uid=1000,gid=1000,dmask=227,fmask=337
#    exec /system/bin/sh /init.qcom.firmware_links.sh /firmware/wcnss /firmware/image "wcnss*"
    #using script to load wcnss fw and let it execute in background
#    exec /system/bin/sh /init.qcom.wcnss_wlan.sh

    # QSEE secure application : keymaster
#    exec /system/bin/sh /init.qcom.firmware_links.sh /system/vendor/firmware /vendor/firmware "keymaster.*"
    symlink /system/vendor/firmware/keymaster.b00 /vendor/firmware/keymaster.b00
    symlink /system/vendor/firmware/keymaster.b01 /vendor/firmware/keymaster.b01
    symlink /system/vendor/firmware/keymaster.b02 /vendor/firmware/keymaster.b02
    symlink /system/vendor/firmware/keymaster.b03 /vendor/firmware/keymaster.b03
    symlink /system/vendor/firmware/keymaster.mdt /vendor/firmware/keymaster.mdt

    # Link vendor/lib by QCT original design
    symlink /system/vendor/lib64 /vendor/lib64
    symlink /system/vendor/lib /vendor/lib
    # exfat
    insmod /system/lib/modules/texfat.ko

    # Load Mocana FIPS module. Add here since it can make sure system is mounted
    exec /system/bin/sh /init.mocana.insert_modules.sh

